<view class='myRiLi'>
  <view class='qiandao'>
    <view>共签到3天</view>
    <view>
      <view bindtap='preYear'>-</view>
      <view class='tiems'>{{nowYear}}.{{nowMonth}}</view>
      <view bindtap='nextYear'>+</view>
    </view>
  </view>
  <view class='riliTiltle'>
    <view  wx:for='{{date}}' wx:key='{{index}}'>{{item}}</view>
  </view>
  <view class='riliBox'>
    <view wx:for='{{dayNums}}' wx:key='{{index}}' class='{{isToday==item.isToday ? "tadayTrue" : ""}}'
    bindtap='dayDetail' data-date='{{item.isToday}}'>
      <view class='oneDay'>{{item.dateNum}}</view>
    </view>
  </view>
    <scroll-view class='class_scroll'  scroll-y>
    <view class='curriculumList'>
      <view wx:for="{{curriculumList}}" wx:key="index" data-index='{{index}}' class='{{item.selected ? "active" : "" }}'         bindtap='selectCurriculum'>
        <view class='curriculumOneTime'>15:00-16:00</view>
        <view class='curriculumName'><text>数学</text>数学高一</view>
        <view class='address'>石景山路54号院</view>
        <view wx:if='{{item.kaoqin}}' class='studentDM' catchtap='studentDM' data-index='{{index}}'>全勤</view>
        <view wx:else class='studentDM' catchtap='studentDM' data-index='{{index}}'>缺勤</view>
      </view>
    </view>
  </scroll-view>

</view>